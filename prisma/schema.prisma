datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum GameType {
  DARTS
  CHESS
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  image     String?
  pin       String?
  qrCode    String   @unique @default(uuid())
  createdAt DateTime @default(now())

  // Relations
  ratings   Rating[]
  
  wonMatches  Match[] @relation("Winner")
  lostMatches Match[] @relation("Loser") 
  
  history     Match[] @relation("PlayerHistory")
  
  achievements UserAchievement[]
}

model Rating {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  game        GameType
  elo         Int      @default(1000)
  
  gamesPlayed Int      @default(0)
  wins        Int      @default(0)
  losses      Int      @default(0)
  draws       Int      @default(0)
  
  currentStreak Int    @default(0) 
  maxStreak     Int    @default(0) 

  @@unique([userId, game]) 
}

model Match {
  id        String   @id @default(uuid())
  playedAt  DateTime @default(now())
  game      GameType 
  
  winnerId  String
  winner    User     @relation("Winner", fields: [winnerId], references: [id])
  
  loserId   String
  loser     User     @relation("Loser", fields: [loserId], references: [id])

  players   User[]   @relation("PlayerHistory")
  
  eloDelta  Int      
}

model Achievement {
  id          String    @id @default(uuid())
  code        String    @unique 
  name        String    
  description String    
  icon        String    
  game        GameType? 
  
  users       UserAchievement[]
}

model UserAchievement {
  id            String      @id @default(uuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  achievementId String
  achievement   Achievement @relation(fields: [achievementId], references: [id])
  unlockedAt    DateTime    @default(now())

  @@unique([userId, achievementId])
}